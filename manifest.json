{
  "manifest_version": 3,
  "name": "LinkedIn Save to PDF (Ingenarte)",
  "short_name": "LinkedIn PDF",
  "version": "0.3.0",
  "description": "Export a clean, print-ready view of your LinkedIn profile as PDF â€” no official button required.",
  "homepage_url": "https://github.com/Ingenarte/Linkedin_Save_to_PDF",
  "action": {
    "default_title": "LinkedIn Save to PDF",
    "default_popup": "src/popup/popup.html"
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*.linkedin.com/*"],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/in/*",
        "https://*.linkedin.com/profile/*",
        "https://media.licdn.com/*"
      ],
      "js": [
        "src/content/ns.js",
        "src/content/utils.js",
        "src/content/jsonld.js",
        "src/content/header.js",
        "src/content/contact.js",
        "src/content/about.js",
        "src/content/experience.js",
        "src/content/education.js",
        "src/content/certifications.js",
        "src/content/publications.js",
        "src/content/skills.js",
        "src/content/languages.js",
        "src/content/honors.js",
        "src/content/interests.js",
        "src/content/printTable.js",
        "src/content/bridge.js",
        "src/content/extractATS.js",
        "src/content/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/print/print.html",
        "src/print/print.css",
        "src/print/print-utils.js",
        "src/print/print-render-header.js",
        "src/print/print-render-sections.js",
        "src/print/print-finalize.js",
        "src/print/print-main.js",
        "page-hook.js"
      ],
      "matches": ["https://*.linkedin.com/*"]
    }
  ]
}
